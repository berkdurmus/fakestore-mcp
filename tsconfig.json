{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "server/src/**/*",
    "shared/src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "client/**/*"
  ]
}
